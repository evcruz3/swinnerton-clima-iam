{
    "name": "swinnerton/keycloak-codeigniter-example",
    "description": "Simple Keycloak OIDC integration example for CodeIgniter 4",
    "type": "project",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.5",
        "jumbojett/openid-connect-php": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php -r \"copy('vendor/codeigniter4/framework/app/.env', '.env') || true;\""
        ]
    }
}
